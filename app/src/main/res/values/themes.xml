<resources>
    <!-- Base application theme. -->
    <style name="Theme.AlgostudioTest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BorderlessBase" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@null</item>
        <item name="cornerRadius">4dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="BorderlessButtonStyle" parent="BorderlessBase">
        <item name="backgroundTint">@color/purple_700</item>
        <item name="rippleColor">#C2C2C2</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="BorderlessButtonStyle.Dark" parent="BorderlessButtonStyle">
        <item name="rippleColor">#E7E7E7</item>
        <item name="android:enabled">true</item>
    </style>
</resources>